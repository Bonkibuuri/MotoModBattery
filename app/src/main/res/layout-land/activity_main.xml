<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.devilsclaw.motomodbattery.SeekBarWithNumber
        android:id="@+id/efficiency_trigger_low"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="21dp"
        android:max="100"
        android:min="0"
        app:layout_constraintBottom_toTopOf="@+id/efficiency_trigger_high_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/efficiency_trigger_low_text" />

    <com.devilsclaw.motomodbattery.SeekBarWithNumber
        android:id="@+id/efficiency_trigger_high"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="420dp"
        android:max="100"
        android:min="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/efficiency_trigger_high_text" />

    <Switch
        android:id="@+id/efficiency_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="73dp"
        android:text="@string/switch_efficiency"
        app:layout_constraintBottom_toTopOf="@+id/efficiency_trigger_low"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/efficiency_trigger_low_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="278dp"
        android:text="@string/efficiency_trigger_low"
        app:layout_constraintBottom_toTopOf="@+id/efficiency_trigger_low"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/efficiency_trigger_high_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="275dp"
        android:text="@string/efficiency_trigger_high"
        app:layout_constraintBottom_toTopOf="@+id/efficiency_trigger_high"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/efficiency_trigger_low" />
</android.support.constraint.ConstraintLayout>
